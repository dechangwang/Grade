.draggable
  background #f7f7f7
  max-width 550px
  width 550px
  padding 25px
  transition width 1s linear, height 1s linear

.person-info__row
  min-height 30px
  line-height 30px

.secondary-title
  font-size 1.05em
  color #444
  min-width 120px
  margin-left 15px
  margin-right 15px

.person-info__tag
  border #ccc 1px solid
  border-radius 10%
  margin-right 10px
  padding 3px
  margin-bottom 4px
  height 30px

.person-info__tag__orange
  background orange

.person-info__tag__green
  background lightgreen

.person-info__tag__red
  background lightcoral

.person-info__description-slice
  margin-right 10px
  //line-height 1.05em

.person-info__warnings-container
  color #ccc

.person-info__warning
  color #ccc

.warning-red
  color firebrick

.warning-orange
  color orange

.warning-blue
  color cornflowerblue

.btn-close-draggable
  position absolute
  top 25px
  right 25px

.btn-fold-draggable
  position absolute
  top 25px
  right 75px

.is-fold
  max-width 150px !important
  max-height 40px !important